{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "src",
    "types": ["node"]
    // Nếu bạn dùng alias:
    // "baseUrl": ".",
    // "paths": { "@/*": ["src/*"] }
  },
  "include": ["src", "global.d.ts"],
  "exclude": ["node_modules", "dist", "build", "coverage", "tmp", ".out"]
}
