{
  "compilerOptions": {
    "lib": ["esnext", "dom", "webworker"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": ["src", "**/*.d.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "files": true
  }
}